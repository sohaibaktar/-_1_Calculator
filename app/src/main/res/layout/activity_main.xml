<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:padding="20dp"
        android:textSize="28dp"

        />

    <TextView
        android:id="@+id/retult_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/solution_et"
        android:layout_marginBottom="15sp"
        android:padding="20dp"
        android:text="0"
        android:textSize="36dp"

        />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <!--1st column-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:backgroundTint="#E82F2F"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="("
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text=")"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:backgroundTint="#EAAD13"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />
        </LinearLayout>
        <!--2nd column-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:backgroundTint="#EAAD13"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />
        </LinearLayout>
        <!--3rd column-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn10"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn11"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn12"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:backgroundTint="#EAAD13"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />
        </LinearLayout>
        <!--4th column-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn13"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn14"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn15"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn16"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:backgroundTint="#EAAD13"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />
        </LinearLayout>
        <!--5th column-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn17"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:backgroundTint="#E82F2F"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn18"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn19"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:text="."
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn20"
                style="@style/Widget.MaterialComponents.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="82dp"
                android:layout_margin="12dp"
                android:backgroundTint="#EAAD13"
                android:text="="
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="36dp" />
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>




